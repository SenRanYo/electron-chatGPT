{
  "productName": "Vutron",
  "appId": "com.vutron.vutron",
  "asar": true,
  "extends": null,
  "compression": "maximum",
  "copyright": "â“’ 2023 ${author}",
  "artifactName": "${productName} ${version}_${arch}.${ext}",
  "directories": {
    "buildResources": "build",
    "output": "./release/${version}"
  },
  "files": ["dist/**/*", "!docs/**/*", "!release/**/*"],
  "mac": {
    "bundleVersion": "1.0",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "icon": "build/icons/icon.icns",
    "type": "distribution",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64", "universal"]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ],
    "sign": false
  },
  "win": {
    "icon": "build/icons/icon.ico",
    "target": [
      {
        "target": "appx",
        "arch": "x64"
      },
      {
        "target": "zip",
        "arch": "x64"
      },
      {
        "target": "portable",
        "arch": "x64"
      },
      {
        "target": "nsis",
        "arch": "x64"
      }
    ]
  },
  "portable": {
    "artifactName": "${productName} ${version}_${arch} Portable.${ext}"
  },
  "nsis": {
    "oneClick": true
  },
  "linux": {
    "executableName": "vutron",
    "icon": "build/icons",
    "category": "Utility",
    "target": [
      {
        "target": "snap",
        "arch": "x64"
      },
      {
        "target": "deb",
        "arch": "x64"
      },
      {
        "target": "rpm",
        "arch": "x64"
      }
    ]
  }
}
